    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <action id="dekun.wang.open.in.terminal.open.in.terminal" class="dekun.wang.open.in.terminal.OpenInTerminal"
                text="在iTerm2中显示">
            <add-to-group group-id="WelcomeScreenRecentProjectActionGroup" anchor="after"
                          relative-to-action="WelcomeScreen.RevealIn"/>
        </action>
    </actions>
</idea-plugin>